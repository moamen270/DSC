@{
    Layout = "_LayoutUser";
}
@model DSC.Models.DTOs.ServiceDto

<div id="banner-area" class="banner-area" style="background-image:url(images/banner/banner1.jpg)">
    <div class="banner-text">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="banner-heading">
                        <h1 class="banner-title">Service</h1>
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb justify-content-center">
                                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="UserIndex">Home</a></li>
                                <li class="breadcrumb-item"><a asp-controller="Service" asp-action="HomeService">Services</a></li>
                                <li class="breadcrumb-item active" aria-current="page">All Services</li>
                            </ol>
                        </nav>
                    </div>
                </div><!-- Col end -->
            </div><!-- Row end -->
        </div><!-- Container end -->
    </div><!-- Banner text end -->
</div><!-- Banner area end -->

<section id="main-container" class="main-container pb-2">
    <div class="container">
        <div class="row">
            @foreach(var service in Model.Services)
            {
                <div class="col-lg-4 col-md-6 mb-5">
                    <div class="ts-service-box">
                        <div class="ts-service-image-wrapper">
                            <img loading="lazy" class="w-100" src="@service.ImgUrl" alt="service-image">
                        </div>
                        <div class="d-flex">
                            <div class="ts-service-box-img">
                                <img loading="lazy" src="images/icon-image/service-icon1.png" alt="service-icon">
                            </div>
                            <div class="ts-service-info">
                                <h3 class="service-box-title"><a href="service-single.html">@service.Name</a></h3>
                                <p>@service.Description</p>
                                <a class="learn-more d-inline-block" asp-controller="Service" asp-action="UserDetails" asp-route-id="@service.Id" aria-label="service-details"><i class="fa fa-caret-right"></i> Learn more</a>
                            </div>
                        </div>
                    </div><!-- Service1 end -->
                </div>

                <!-- Col 1 end -->
            }



        </div><!-- Main row end -->
    </div><!-- Conatiner end -->
</section><!-- Main container end -->