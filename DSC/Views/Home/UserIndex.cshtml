<section id="ts-features" class="ts-features pb-2">
    <div class="container">
        <div class="row">
            @foreach(var item in Model.Services)
            {
            <div class="col-lg-4 col-md-6 mb-5">
                <div class="ts-service-box">
                    <div class="ts-service-image-wrapper">
                        <img loading="lazy" class="w-100" src="@item.ImgUrl" alt="service-image" width="350px" height="220px">
                    </div>
                    <div class="d-flex">
                        <div class="ts-service-box-img">
                                <img loading="lazy" src="@item.IconUrl" alt="service-icon" width="60px" height="60px" />
                        </div>
                        <div class="ts-service-info">
                                <h3 class="service-box-title"><a asp-controller="Service" asp-action="UserDetails" asp-route-id="@item.Id">@item.Name</a></h3>
                            <p>@item.Description...</p>
                            <a class="learn-more d-inline-block" asp-controller="Service" asp-action="UserDetails" asp-route-id="@item.Id" aria-label="service-details"><i class="fa fa-caret-right"></i> Learn more</a>
                        </div>
                    </div>
                </div><!-- Service1 end -->
            </div><!-- Col 1 end -->
