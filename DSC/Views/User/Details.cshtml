<!-- Start page content -->
<div class="container mt-4 mt-lg-5">
    <div class="owl-carousel owl-theme default-carousel  default-carousel-nav">
        <div>
                <img src="@Model.ImgaeUrl" alt="" class="w-100">
            </a>
        </div>

    </div>
    <div class="row mb-4 my-lg-5">
        <div class="col-12 col-md-8">
            <h2 >@Model.User.Name</h2>

          

        </div>
        <div class="col-12 col-md-4 col-lg-3 offset-lg-1 mt-md-5 mt-lg-0">
            <div class="my-2">
                <span class="fables-main-text-color font-15 semi-font">PhoneNumber </span>
                <span class="fables-forth-text-color fifth"> : @Model.User.PhoneNumber </span>
            </div>
            <div class="my-2">
                <span class="fables-main-text-color font-15 semi-font">Email </span>
                <span class="fables-forth-text-color fifth"> : @Model.User.Email </span>
                <span class="fables-forth-text-color fifth"> : @nameof(Model.Gender)</span>
                <span class="fables-forth-text-color fifth"> : @nameof(Model.CollageYear)</span>
                <span class="fables-forth-text-color fifth"> : @Model.Department</span>
                <span class="fables-forth-text-color fifth"> : @nameof(Model.Language)</span>
                <span class="fables-forth-text-color fifth"> : @nameof(Model.StudyType)</span>
                <span class="fables-forth-text-color fifth"> : @nameof(Model.Religion)</span>
            </div>

            <a asp-action="Index" class="mt-4 btn fables-second-background-color white-color fables-main-hover-background-color font-15 white-color-hover px-5 py-2">More Students</a>
        </div>

    </div>
   

</div>
<!-- /End page content -->









<section class="ftco-section mt-4">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Family</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">

                <div class="table-wrap">
                    <table class="table table-hover">
                        <thead class="thead-primary">
                            <tr>
                                <th>Name</th>
                                <th>Job</th>
                                <th>Relation</th>
                                <th>Is Alive</th>
                                <th>Status</th>
                                <th>Income</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var member in Model.Family)
                            {
                                <tr>
                                    <td>@member.Name</td>
                                    <td>@member.Job</td>
                                    <td>@nameof(member.Relation)</td>
                                    <td>@member.IsAlive</td>
                                    <td>@nameof(member.Status)</td>
                                    <td>@member.Income</td>
                                   
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script>
    function setIdEdit(id) {
        document.getElementById("editId").value = id;
    }
    function setIdDelete(id) {
        document.getElementById("deleteId").value = id;
    }
</script>