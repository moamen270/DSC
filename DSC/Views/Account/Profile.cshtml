@model DSC.Models.DTOs.UserProfileDto

<!-- Start Breadcrumbs -->
<div class="fables-light-background-color">
    <div class="container">
        <nav aria-label="breadcrumb">
            <ol class="fables-breadcrumb breadcrumb px-0 py-3">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index" class="fables-second-text-color">Home</a></li>
                <li class="breadcrumb-item active" aria-current="page">Edit Profile</li>
            </ol>
        </nav>
    </div>
</div>
<!-- /End Breadcrumbs -->
<div class="container rounded bg-white mt-5 mb-5">
    <form asp-action="ProfileEdit" method="post">
    <div class="row">
        <div class="col-md-3 border-right">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5"><img class="rounded mt-5" width="200px" src="@Model.ImgUrl"><span class="font-weight-bold">@Model.FullName</span><span class="text-black-50">@Model.Email</span><span> </span></div>
        </div>
        <div class="col-md-9 border-right">
            <div class="p-3 py-5">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12"><label asp-for="FullName" class="labels">Name</label>
                        <input type="text" asp-for="FullName" class="form-control" placeholder="first name" value="@Model.FullName">
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12">
                        <label asp-for="MobileNumber" class="labels">Mobile Number</label>
                        <input asp-for="MobileNumber" type="text" class="form-control" placeholder="enter Mobile Number" value="@Model.MobileNumber">
                    </div>
                    
                    <div class="col-md-12">
                        <label asp-for="PhoneNumber" class="labels">Phone Number</label>
                        <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="enter Phone Number" value="@Model.PhoneNumber">
                    </div>
                    <div class="col-md-12">
                        <label asp-for="ImgUrl" class="labels">Profile Image Link:</label>
                        <input asp-for="ImgUrl" type="text" class="form-control" placeholder="enter ImgUrl" value="@Model.ImgUrl">
                    </div>
                    @* <div class="col-md-12"><label class="labels">State</label><input type="text" class="form-control" placeholder="enter address line 2" value=""></div>
                    <div class="col-md-12"><label class="labels">Area</label><input type="text" class="form-control" placeholder="enter address line 2" value=""></div>
                    <div class="col-md-12"><label class="labels">Email ID</label><input type="text" class="form-control" placeholder="enter email id" value=""></div>
                    <div class="col-md-12"><label class="labels">Education</label><input type="text" class="form-control" placeholder="education" value=""></div> *@
                </div>
               @*  <div class="row mt-3">
                    <div class="col-md-6"><label class="labels">Country</label><input type="text" class="form-control" placeholder="country" value=""></div>
                    <div class="col-md-6"><label class="labels">State/Region</label><input type="text" class="form-control" value="" placeholder="state"></div>
                </div> *@
                <div class="mt-5 text-center">
                    <button class="btn btn-primary profile-button" type="submit">Save Profile</button></div>
            </div>
        </div>
        
    </div>
    </form>
</div>

